%div.sidebar
  %div
    =image_tag "editr_logo.png"
  %div
    %button.postAction.publish#publish PUBLISH
  %div
    %button.postAction#save Save
    %button.postAction#preview Preview
  %div.addItemDiv
    %button.add#add_rectangle + New Image
  %div.drawerDiv#imageDrawerDiv
    %div.drawerContent#imageDrawerContent
  %div
    %button.add#add_header + New Header
  %div
    %button.add#add_section_title + New Section Title
  %div
    %button.add#add_text_section + New Text Section

%div.dialog#imageUploadDialog
  %div.dialogForm
    %form
      %fieldset
        %label.formLabel#URLlabel URL
        %input.textInput#URLinput
    %div.warn#imageURLWarn Must be a valid image URL.
        
%div.main_view
  %div.clearfix#floatingbar{:style=>"display:none"}
    %ul 
      %li
        %button.unpressed.squareButton.button#toolbar_bold{:style=>"font-weight:900;"}
          B
      %li
        %button.unpressed.squareButton.button#toolbar_italic{:style=>"font-style:italic; font-weight:500;"}
          I
    %div{:style=>"clear:both"}
  .page
    %canvas#grid{:width => 720, :height => 400}
    %canvas#borders{:width => 720, :height => 400}
    #page_content
    %br
%div{:style=>"display: none"}
  = form_for @post do |f|
    -if @post.errors.any?
      #error_explanation
        %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
        %ul
          - @post.errors.full_messages.each do |msg|
            %li= msg

    .field
      = f.label :name
      = f.text_field :name
    .field
      = f.label :title
      = f.text_field :title
    .field
      = f.label :content
      = f.text_area :content
    .actions
      = f.submit 'Save'
