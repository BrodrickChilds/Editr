%div.sidebar
  %button#add_rectangle Add Item
  %button#add_header Add Header
  %button#add_section_title Add Section Title
  %button#add_text_section Add Text Section

%div.main_view
  .page
    %canvas#grid{:width => 720, :height => 400}
    %canvas#borders{:width => 720, :height => 400}
    #page_content

= form_for @post do |f|
  -if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
